
    
pipeline {
    agent any


    stages {
        stage('Install Node.js') {
            steps {
                script {
                    // Install Node.js 12
                    tool 'nodejs-12'
                }
            }
        }

        stage('Cloning') {
            steps {
                echo 'Cloning repository'
                git 'git@github.com:Kevinkimanzi/gallery_pipeline.git'
            }
        }

        stage('Installation') {
            steps {
                echo 'Installing dependencies'
                sh 'npm install'
            }
        }
    
        stage('Build') {
            steps {
                echo 'building the project'
                sh 'npm run build'
            }


        stage('Run Tests') {
            steps {
                echo 'running tests'
                sh 'npm run test'
            }
        }

        
    }
    }
}
